<% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src=".../100px180/?text=Image cap" alt="Card image cap">
    <div class="card-body">
      <p class="card-text"><%="#{post.message}"%></p>
    </div>
    <ul class="list-group list-group-flush">
       <li class="list-group-item"><%= "#{post.user.email}"%></li>
      <li class="list-group-item"><%="#{time_ago_in_words(post.created_at)} ago"%></li>
    </ul>
    <div class="card-body">
    <form action="" method="">
      <a href="" id="like-link_<%=post.id%>">Like</a>
    </form>
      <div id="number_of_likes">Likes: <%= "#{post.votes_for.size}"%></div>
    <form action="" method="">
      <a href="<%= "#{post.user_id}"%>" class="card-link">Wall</a>
    </form>
    </div>
  </div>
  <br>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
